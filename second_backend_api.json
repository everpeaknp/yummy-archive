  {
    "path": "/jobs/archive",
    "method": "POST",
    "summary": "Create Archive Job",
    "description": "Initiates a background job to archive orders based on IDs or date range. Supports appending new orders to existing archives.",
    "tags": ["Jobs"],
    "request_body": {
      "type": "json",
      "fields": [
        {
          "name": "restaurant_id",
          "type": "integer",
          "required": true,
          "description": "ID of the restaurant"
        },
        {
          "name": "order_ids",
          "type": "array[integer]",
          "required": "conditional (Provide order_ids or date range)",
          "description": "List of specific order IDs to archive"
        },
        {
          "name": "start_date",
          "type": "string (datetime ISO format)",
          "required": "conditional",
          "description": "Start date for archive range"
        },
        {
          "name": "end_date",
          "type": "string (datetime ISO format)",
          "required": "conditional",
          "description": "End date for archive range"
        },
        {
          "name": "user",
          "type": "string",
          "required": false,
          "default": "from context",
          "description": "User initiating the job"
        },
        {
          "name": "append",
          "type": "boolean",
          "required": false,
          "default": false,
          "description": "If true, append new orders to existing archive for the same day instead of returning existing job"
        }
      ]
    },
    "response": {
      "jobs": [
        {
          "archive_day": "string (YYYY-MM-DD)",
          "job_id": "string (UUID)",
          "status": "string (PENDING|EXPORTING|EXPORTED|FAILED)",
          "created": "boolean - true if new job was created",
          "appended": "boolean - true if orders are being appended to existing archive",
          "new_orders": "integer (only present when appended=true) - count of new orders being appended",
          "message": "string (optional) - informational message e.g. 'No new orders to append'"
        }
      ]
    },
    "errors": {
      "400": "Archive job not ready for append (not EXPORTED) | Appending would exceed limit of N orders | Invalid criteria",
      "403": "Restaurant mismatch",
      "500": "Manifest missing or corrupt"
    }
  },
  {
